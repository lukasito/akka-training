<configuration>

  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <!--add thread log %X{sourceThread} -->
    <encoder>
      <pattern>%date{ISO8601} %-5level [%logger{36}] - %msg%n</pattern>
    </encoder>
  </appender>

  <root level="debug">
    <appender-ref ref="STDOUT"/>
  </root>
</configuration>
